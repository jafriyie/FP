<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:background="@drawable/logback1"
    >



    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:text="Please Enter Your Email Address"
        android:textColor="#FFFFFF"
        />
    <EditText
        android:id="@+id/etForgotEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="10dp"
        android:ems="10"
        style="@style/EditTextCustomHolo"
        >
        <requestFocus />
    </EditText>


    <Button
        android:id="@+id/bForgotNext"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@+id/linearLayoutControls"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonshapeblue"
        android:textColor="#FFFFFF"
        android:text="Next"

        />




</LinearLayout>
