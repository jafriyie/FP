<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/logback"

    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">




            <!-- User's Full Name -->

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Full Name"
                android:textColor="#FFFFFF"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                />

            <EditText
                android:id="@+id/etFullName"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="10dp"
                style="@style/EditTextCustomHolo"
                />

            <!-- User's E-Mail -->

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:text="E-Mail Address"
                android:textColor="#FFFFFF"
                />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"

                style="@style/EditTextCustomHolo"
                />


            <!-- User's password  -->

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:text="Password"
                android:textColor="#FFFFFF"
                />

            <EditText
                android:id="@+id/rPassword"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:inputType="textPassword"

                style="@style/EditTextCustomHolo"
                />

            <!-- User Confirms password  -->

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:text="Confirm Password"
                android:textColor="#FFFFFF"
                />

            <EditText
                android:id="@+id/rConPassword"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="10dp"
                style="@style/EditTextCustomHolo"
                android:inputType="textPassword"


                />

            <!-- User's Phone Number -->

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:text="Mobile Number"
                android:textColor="#FFFFFF"
                />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="10dp"
                style="@style/EditTextCustomHolo"

                android:inputType="phone"
                />

            <!--User's Security Question-->

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:text="Please Select A Security Question"
                android:textColor="#FFFFFF"
                />


            <Spinner
                android:id="@+id/spinQuestion1"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:popupBackground="#DDDDDD"

                style="@style/SpinnerCustomHolo"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:text="Answer The Security Question"
                android:textColor="#FFFFFF"
                />

            <EditText
                android:id="@+id/etSQ1"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:inputType="text"
                android:layout_marginBottom="10dp"

                style="@style/EditTextCustomHolo"

                />

            <!-- <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:paddingLeft="8dp"
                 android:paddingRight="8dp"
                 android:layout_marginRight="8dp"
                 android:layout_marginLeft="8dp"
                 android:text="Please Type In A Memorable Question"
                 android:textColor="#FFFFFF"
                 />

             <EditText
                 android:id="@+id/spinQuestion"
                 android:layout_width="fill_parent"
                 android:paddingLeft="8dp"
                 android:paddingRight="8dp"
                 android:layout_marginRight="8dp"
                 android:layout_marginLeft="8dp"
                 android:layout_height="40dp"
                 android:inputType="text"
                 android:layout_marginBottom="10dp"
                 style="@style/EditTextCustomHolo"

                 />
             <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:paddingLeft="8dp"
                 android:paddingRight="8dp"
                 android:layout_marginRight="8dp"
                 android:layout_marginLeft="8dp"
                 android:text="Answer The Security Question"
                 android:textColor="#FFFFFF"
             />
             <EditText
                 android:id="@+id/etSQ2"
                 android:layout_width="fill_parent"
                 android:paddingLeft="8dp"
                 android:paddingRight="8dp"
                 android:layout_marginRight="8dp"
                 android:layout_marginLeft="8dp"
                 android:layout_height="40dp"
                 android:inputType="text"
                 android:layout_marginBottom="10dp"
                 style="@style/EditTextCustomHolo"

                 />-->


            <Button
                android:id="@+id/bNext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/linearLayoutControls"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/buttonshape"
                android:textColor="#FFFFFF"
                android:text="Next"


                />



        </LinearLayout>
    </ScrollView>

</LinearLayout>











